{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "autoscaling",
            "Effect": "Allow",
            "Action": [
                "autoscaling:UpdateAutoScalingGroup",
                "autoscaling:SetInstanceProtection"
            ],
            "Resource": "arn:aws:autoscaling:*:{Account}:autoScalingGroup:*:autoScalingGroupName/e3s-*"
        },
        {
            "Sid": "ec2",
            "Effect": "Allow",
            "Action": [
                "ec2:TerminateInstances"
            ],
            "Resource": [
                "*"
            ],
            "Condition": {
                "StringLike": {
                    "ec2:Region": "us-east-?"
                }
            }
        }
    ]
}
